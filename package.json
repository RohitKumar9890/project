{
  "name": "edueval",
  "version": "1.0.0",
  "description": "Educational Evaluation Platform - A comprehensive platform for managing courses, exams, and student assessments",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix client && npm install --prefix server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "start:server": "npm start --prefix server",
    "start:client": "npm start --prefix client",
    "test": "npm test --prefix server",
    "test:watch": "npm run test:watch --prefix server",
    "lint": "npm run lint --prefix server && npm run lint --prefix client",
    "lint:fix": "npm run lint:fix --prefix server",
    "seed:admin": "npm run seed:admin --prefix server",
    "seed:test": "npm run seed:test --prefix server",
    "check-setup": "node scripts/check-setup.js",
    "generate-secrets": "node scripts/generate-jwt-secrets.js",
    "render-helper": "node scripts/render-deploy-helper.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "education",
    "evaluation",
    "assessment",
    "learning-management",
    "exam-system"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/edueval.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
