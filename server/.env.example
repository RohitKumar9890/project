# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Firebase Configuration
# Option 1: Use service account file (recommended for local development)
# Place your firebase-service-account.json in the server directory
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Use environment variables (good for production/CI)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-also-make-it-long-and-random
JWT_REFRESH_EXPIRE=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Code Execution
CODE_EXECUTION_TIMEOUT=10000
CODE_EXECUTION_MEMORY_LIMIT=256

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Admin Seed
SEED_ADMIN_EMAIL=admin@edueval.local
SEED_ADMIN_PASSWORD=Admin@12345
SEED_ADMIN_NAME=EduEval Admin

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# OAuth Configuration
# Session secret for OAuth flow (can reuse JWT_SECRET if preferred)
SESSION_SECRET=your-session-secret-change-this

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/oauth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/oauth/microsoft/callback
MICROSOFT_TENANT=common

# Client URL (for OAuth redirects)
CLIENT_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Code Execution Configuration
CODE_EXECUTION_TIMEOUT=10000
CODE_EXECUTION_MEMORY_LIMIT=256

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@edueval.com

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Seed admin (local/dev)
SEED_ADMIN_EMAIL=admin@edueval.local
SEED_ADMIN_PASSWORD=Admin@12345
SEED_ADMIN_NAME=EduEval Admin
