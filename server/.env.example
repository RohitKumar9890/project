# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Option 1: Use service account file (recommended for local development)
# Place your firebase-service-account.json in the server directory
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Use environment variables (good for production/CI)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================
# JWT CONFIGURATION (UPDATED FOR SECURITY)
# ============================================
# IMPORTANT: Change these secrets in production!
# SECURITY UPDATE: Reduced token expiry times for better security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-also-make-it-long-and-random-different-from-jwt
JWT_REFRESH_EXPIRE=7d

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# CLIENT URL (for email links and redirects)
# ============================================
CLIENT_URL=http://localhost:3000

# ============================================
# CODE EXECUTION CONFIGURATION (UPDATED FOR SECURITY)
# ============================================
# REQUIRES: Docker daemon running
# SECURITY UPDATE: Reduced limits for better security
# Timeout in milliseconds, Memory limit in MB
CODE_EXECUTION_TIMEOUT=5000
CODE_EXECUTION_MEMORY_LIMIT=128
CODE_EXEC_RATE_LIMIT_WINDOW_MS=60000
CODE_EXEC_RATE_LIMIT_MAX=5
CODE_EXEC_DAILY_QUOTA=100

# ============================================
# RATE LIMITING (UPDATED FOR SECURITY)
# ============================================
# SECURITY UPDATE: More restrictive rate limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# ============================================
# FILE UPLOAD CONFIGURATION (UPDATED FOR SECURITY)
# ============================================
# SECURITY UPDATE: Added upload rate limiting
MAX_FILE_SIZE=5242880
MAX_UPLOADS_PER_HOUR=20
UPLOAD_PATH=./uploads

# ============================================
# EMAIL CONFIGURATION (REQUIRED for notifications)
# ============================================
# WARNING: Email features (welcome emails, password reset, notifications) 
# will NOT work without proper SMTP configuration
# For Gmail: Enable "Less secure app access" or use App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@edueval.com

# ============================================
# ADMIN SEED CONFIGURATION
# ============================================
SEED_ADMIN_EMAIL=admin@edueval.local
SEED_ADMIN_PASSWORD=Admin@12345
SEED_ADMIN_NAME=EduEval Admin

# ============================================
# OAUTH CONFIGURATION (NOT IMPLEMENTED YET)
# ============================================
# NOTE: OAuth providers are planned for future release
# The following configurations are for reference only and are not currently functional
# SESSION_SECRET=your-session-secret-change-this
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/oauth/google/callback
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
# MICROSOFT_CALLBACK_URL=http://localhost:5000/api/oauth/microsoft/callback
# MICROSOFT_TENANT=common

# ============================================
# BACKGROUND SERVICES (NEW)
# ============================================
# Enable scheduled cleanup tasks (token cleanup, audit log cleanup, account deletion)
ENABLE_CLEANUP_TASKS=true
RUN_CLEANUP_ON_STARTUP=false

# ============================================
# REDIS CONFIGURATION (OPTIONAL - Not fully implemented)
# ============================================
# NOTE: Redis support for distributed rate limiting
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
